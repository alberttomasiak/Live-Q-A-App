doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Node.js Creativity Gym
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/css/reset.css')
    link(rel='stylesheet', href='/css/style.css')
  body
    navigation.nav
      .container
        a.nav__logo(href='/') liveQandA
        div
          a.nav__link(href='/login') Log In
          a.nav__link(href='/signup') Sign Up
    .container
      header
        h1 #{title}
        p #{description}
        span June 20, 2016
      content
        form.form.form--inline(action='')
          input.form--inline__input(type='text', placeholder='Ask a question...')
          button.form--inline__btn(type='submit') Ask
        .thread
          .thread__question
            .comment.comment--question
              img.comment__profilepic(src='https://s3.amazonaws.com/uifaces/faces/twitter/adhamdannaway/48.jpg', alt='')
              div
                a.comment__author(href='#') stevejobs
                span.comment__text Waarvoor dient die Express nu weer?
          .thread__answers
            ul
              li
                .comment.comment--answer
                  img.comment__profilepic(src='https://s3.amazonaws.com/uifaces/faces/twitter/whale/48.jpg', alt='')
                  div
                    a.comment__author(href='#') friendlywhale
                    span.comment__text Volgens mij zit de routing daar standaard in, anders moet je dat zelf schrijven.
              li
                .comment.comment--answer
                  img.comment__profilepic(src='https://s3.amazonaws.com/uifaces/faces/twitter/c_southam/48.jpg', alt='')
